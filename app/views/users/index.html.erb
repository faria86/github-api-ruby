<div class="index">
    <h1 class="title">Hi! Welcome to Github API.</h1>
    
    <div class="logo">
        <img src="/logo.png" alt="logogithub"/>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-lg-12 mt-5">
                <% if flash[:alert] %>
                <div class="alert alert-warning"><%= flash[:alert] %></div>
                <% end %>
                <div class="mx-auto mt-5" style="width: 400px">
                    <%= form_with(url: search_path, method: 'get', local: true) do %>
                    <div class="form-group">
                        <%= text_field_tag :username, nil, placeholder: 'type username..', class: 'form-control' %>
                    </div>
                    <%= button_tag 'Search', class: 'btn btn-success' %>
                    <% end %>
                </div>
            </div>
        </div>
    </div> 
</div>

